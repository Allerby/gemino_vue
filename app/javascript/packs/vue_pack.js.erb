import Vue from 'vue/dist/vue.esm';
import TurbolinksAdapter from 'vue-turbolinks';
import Axios from 'axios';
import VueAxios from 'vue-axios';
import vSelect from "vue-select";
import SelectBudgetWorkflow from '../components/select-budget-workflow.vue';
import UploadCsv from '../components/upload-csv.vue';
import LeftNavigation from '../components/left-navigation.vue';
import OpenIndicator from '../components/select-chevron';
import CategoryPicker from '../components/category-picker';
import CategoryBreakdown from '../components/category-breakdown';
import 'vue-select/dist/vue-select.css';

vSelect.props.components.default = () => ({ OpenIndicator });

Vue.use(VueAxios, Axios);
Vue.use(TurbolinksAdapter);

Vue.component("v-select", vSelect);
Vue.component('select-budget-workflow', SelectBudgetWorkflow);
Vue.component('upload-csv', UploadCsv);
Vue.component('left-navigation', LeftNavigation);
Vue.component('category-picker', CategoryPicker);
Vue.component('category-breakdown', CategoryBreakdown);

document.addEventListener('turbolinks:load', () => {
  new Vue({
    el: '[data-behavior="vue"]',
  })
});
